<div class="row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for [:admin, product] do |f| %>
      <%=render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :content %>
      <%= f.text_area :content %>
      <%= f.label :picture_link %>
      <%= f.text_field :picture_link %>
      <%= f.label :price %>
      <%= f.text_field :price %>
      <%= f.label :classify %>
      <%= f.select :classify, product_select %>
      <%= f.label :category %>
      <%= f.select :category_id, category_select %>
      <%= f.label :quantity %>
      <%= f.number_field :quantity %>
      <%= f.submit t "product.create_button", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
