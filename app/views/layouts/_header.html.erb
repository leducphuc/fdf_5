<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("application.base_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("application.home_path"), root_path %></li>
        <li><%= link_to t("application.help_path"), help_path %></li>
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("application.users"), admin_users_path %></li>
            <li><%= link_to t("application.admin_suggest"), admin_suggest_path(current_user) %></li>
            <li><%= link_to t("product.product.new_product"),
              new_admin_product_path %>
          <% else %>
            <li><%= link_to t("application.user_suggest"), new_suggest_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "application.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("application.profile"), current_user %></li>
              <li><%= link_to t("application.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("application.logout"), logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("application.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
